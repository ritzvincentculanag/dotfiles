{
  "editor.fontSize": 15,
  "editor.lineHeight": 1.8,
  "editor.fontFamily": "MonoLisa",
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.matchBrackets": "never",
  "editor.formatOnType": true,
  "editor.wordBasedSuggestions": "off",

  "debug.console.fontFamily": "MonoLisa",
  "debug.console.fontSize": 15,
  "debug.console.lineHeight": 1.8,

  "liveServer.settings.donotVerifyTags": true,

  "php.debug.executablePath": "/home/arvee/.config/herd-lite/bin/php",
  "php.executablePath": "/home/arvee/.config/herd-lite/bin/php",

  "workbench.startupEditor": "none",
  "workbench.iconTheme": "vscode-icons",
  "workbench.sideBar.location": "right",
  "workbench.editor.showTabs": "single",
  "workbench.colorTheme": "Dracula Theme",
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": false,

  "window.menuBarVisibility": "toggle",

  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off",
    "editor.defaultFormatter": "Dart-Code.dart-code"
  },

  "[php]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80]
  },

  "[python]": {
    "editor.rulers": [80],
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultColorDecorators": "always",
    "gitlens.codeLens.symbolScopes": [
      "!Module"
    ],
  },

  "[css]": {
    "editor.suggest.insertMode": "replace",
    "editor.rulers": [80],
    "editor.tabSize": 2,
  },

  "[html]": {
    "editor.suggest.insertMode": "replace",
    "editor.rulers": [80],
    "editor.tabSize": 2,
  },

  "[javascript]": {
    "editor.maxTokenizationLineLength": 2500,
    "editor.suggest.insertMode": "replace",
    "editor.rulers": [80],
    "editor.tabSize": 2,
  }
}
